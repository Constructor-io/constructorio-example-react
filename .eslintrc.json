{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-param-reassign": ["error", { "props": false }],
        "react/prop-types": 0,
        "react/jsx-curly-spacing": [2, "always"],
        "object-curly-spacing": [2, "always"]
    }
}
